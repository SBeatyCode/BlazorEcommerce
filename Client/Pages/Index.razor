@page "/"
@page "/{categoryUrl}"
@page "/search/{searchText}"
@using BlazorEcommerce.Client.Services.ProductServices;
@inject IProductService ProductService

<PageTitle>My Shop</PageTitle>

@if((CategoryUrl == null || CategoryUrl == string.Empty) && (SearchText == null || SearchText == string.Empty))
{
	<FeaturedProducts />
}
else
{
	<ProductList />
}

@code
{
	[Parameter]
	public string? CategoryUrl { get; set; } = null;

	[Parameter]
	public string? SearchText { get; set; } = null;

	protected override async Task OnParametersSetAsync()
	{
		if (SearchText != null)
		{
			await ProductService.SearchProducts(SearchText);
		}
		else
		{
			await ProductService.GetProductsAsync(CategoryUrl);
		}
	}
}
